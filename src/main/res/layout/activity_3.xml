<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity3">

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="4"
            android:progress="0"
            android:id="@+id/seekBar2" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="420dp"
            app:layout_constraintTop_toBottomOf="@+id/subTitle2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ARButton2" app:layout_constraintVertical_bias="0.795"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="See in AR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ARButton2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subTitle2"
            app:layout_constraintVertical_bias="0.954"/>
    <TextView
            android:text="Life Cycle of Massive Star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subTitle2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.058" android:textSize="24sp"
    />
    <TextView
            android:text="Phase 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subTitle2"
            app:layout_constraintVertical_bias="0.175"/>
    <ImageView
            android:layout_width="254dp"
            android:layout_height="136dp" app:srcCompat="@drawable/nebulacloud"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/seekBar2" app:layout_constraintVertical_bias="0.858"
    />
</android.support.constraint.ConstraintLayout>